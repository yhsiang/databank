form(method='post', action='')
  .row
    .span3
      .control-group
        label(for='ActivityName')活動名稱
        .controls
          input(type='text', name='activityname', id='ActivityName')
      .control-group
        label(for='ActivityBrief')活動簡稱
        .controls  
          input(type='text', name='activitybrief', id='ActivityBrief')
      .control-group
        label(for='Location')地點
        .controls
          input(type='text', name='location', id='Location')
      .control-group
        label(for='Address')地址
        .controls
          input(type='text', name='address', id='Address')
    .span3
      .control-group
        label(for='PhotoID')影片編號
        .controls
          input(type='text', name='photoid', id='PhotoID')
      .control-group
        label(for='StartDate')開始日期
        .controls
          input(type='text', name='startdate', id='StartDate')
      .control-group
        label(for='EndDate')結束日期
        .controls
          input(type='text', name='enddate', id='EndDate')
      .control-group
        label(for='VideoLength')影片長度
        .controls
          input(type='text', name='length', id='VideoLength')
  .row
    .span6
      .control-group
        label影片性質
        .controls
          label.checkbox.inline
            input(type='checkbox', class='videocategory', value='展演帶')
            展演帶
          label.checkbox.inline
            input(type='checkbox', class='videocategory video2', value='採訪帶')
            採訪帶
          label.checkbox.inline
            input(type='checkbox', class='videocategory video3', value='新聞帶')
            新聞帶
          label.checkbox.inline
            input(type='checkbox', class='videocategory video4', value='新聞稿帶')
            新聞稿帶
          label.checkbox.inline
            input(type='checkbox', class='videocategory', value='彩排帶')
            彩排帶
          label.checkbox.inline
            input(type='checkbox', class='videocategory', value='活動帶')
            活動帶
          label.checkbox.inline
            input(type='checkbox', class='videocategory', value='集中研修帶')
            集中研修帶
          label.checkbox.inline
            input(type='checkbox', class='videocategory', value='空鏡')
            空鏡
  .row.video2.extend
    .span6
      .control-group
        label採訪人物
        input(type='text')
      .control-group
        label採訪時間
        input(type='text')
      .control-group
        label採訪內容
        textarea
  .row.video3.extend
    .span6
      .control-group
        label錄製電視台
        input(type='text')
      .control-group
        label錄製時間
        input(type='text')
      .control-group
        label播出內容全文
        textarea
  .row.video4.extend
    .span6
      .control-group
        label播出電視台
        input(type='text')
      .control-group
        label播出時間
        input(type='text')
      .control-group
        label播出內容全文
        textarea
  .row.format.timecode
    .span3
      .control-group
        label|TimeCode
        .controls
        input(type='text')
    .span6
      .control-group
        label陣組勾選(可複選)
        .controls
          each workgroup in workgroups
            label.checkbox.inline  
              input(type='checkbox', class='workgroup', value=workgroup)
              =workgroup
      .control-group
        label人物勾選(可複選)
        .controls
          each participant in participants
            - if (participant != '師父' && participant != '師母')
              label.checkbox.inline 
                input(type='checkbox', class='participant other', value=participant)
                =participant
              input(type='text', class='participant inputother')
            - else
              label.checkbox.inline
                input(type='checkbox', class='participant', value=participant)
                =participant
  .row
    .span6
      a.btn.addtimecode 新增TimeCode
  .row
    .span6      
      .control-group
        label(for='FileLink')檔案連結
        .controls
          input(type='text', name='filelink', id='FileLink')
      .form-actions
        input(type='submit', class='btn btn-primary')
        a(class='btn') 重設